<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        <%= title%>
    </title>
</head>

<body>
    <h1>Halaman Contact</h1>
    <a href="/">Back to Home</a>
    <table border="1" width="50%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Company</th>
                <th>Email</th>
                <th>Telpon</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach ( rows => { %>
                <tr>
                    <td>
                        <%=rows.id%>
                    </td>
                    <td>
                        <%=rows.name%>
                    </td>
                    <td>
                        <%=rows.company%>
                    </td>
                    <td>
                        <%=rows.email%>
                    </td>
                    <td>
                        <%=rows.telp_number%>
                    </td>
                    <td>
                        <a href="/contact/edit/<%=rows.id%>">Edit</a>
                        <a href="/contact/delete/<%= rows.id%>">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <form class="" action="/contact" method="POST">
        <input type="text" name="name" placeholder="Name">
        <input type="text" name="company" placeholder="Company">
        <input type="text" name="email" placeholder="Email">
        <input type="text" name="telp_number" placeholder="No Telpon">
        <input type="submit" value="SUBMIT">
    </form>
</body>

</html>