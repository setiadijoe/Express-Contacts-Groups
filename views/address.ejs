<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        <%= title%>
    </title>
</head>

<body>
    <h1>Halaman Address</h1>
    <a href="/">Back to Home</a>
    <table border="1" width="50%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Street</th>
                <th>City</th>
                <th>Zip Code</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach ( rows => { %>
                <tr>
                    <td>
                        <%=rows.id%>
                    </td>
                    <td>
                        <%=rows.street%>
                    </td>
                    <td>
                        <%=rows.city%>
                    </td>
                    <td>
                        <%=rows.zipcode%>
                    </td>
                    <td>
                        <a href="/address/edit/<%=rows.id%>">Edit</a>
                        <a href="/address/delete/<%= rows.id%>">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <form class="" action="/address" method="POST">
        <input type="text" name="street" placeholder="Street">
        <input type="text" name="city" placeholder="City">
        <input type="text" name="zipcode" placeholder="Zipcode">
        <input type="submit" value="SUBMIT">
    </form>
</body>

</html>