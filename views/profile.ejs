<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        <%= title%>
    </title>
</head>

<body>
    <h1>Halaman Contact</h1>
    <a href="/">Back to Home</a>
    <table border="1" width="25%" >
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Password</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach ( rows => { %>
                <tr>
                    <td>
                        <%=rows.id%>
                    </td>
                    <td>
                        <%=rows.username%>
                    </td>
                    <td>
                        <%=rows.password%>
                    </td>
                    <td>
                        <a href="/profile/edit/<%=rows.id%>">Edit</a>
                        <a href="/profile/delete/<%= rows.id%>">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <form class="" action="/profile" method="POST">
        <input type="text" name="username" placeholder="Username">
        <input type="text" name="password" placeholder="Password">
        <input type="submit" value="SUBMIT">
    </form>
</body>

</html>